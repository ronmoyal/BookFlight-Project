<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@{
    ViewBag.Title = "Home Page";
    @model Flight_Project.Models.Find
}

@using (Html.BeginForm("showSearchPage", "Result", FormMethod.Post))
{
    <style>
        body {
            background-image: url('../../image/FlightTicket1.jpeg');
            height: 100vh;
            background-size: cover;
            background-position: center;
        }
    </style>
    <div style="position: absolute; left: 450px; top: 200px; font-family: 'Bradley Hand', sans-serif; font-size: 1em">
        <h1>Search Flight</h1>
        <input type="radio" name="tripType" value="One Way" checked> One Way
        <input type="radio" name="tripType" value="Two Way" style="margin: 10px"> Two Way


        <div class="form-group" style="left: 50px; margin-top: 10px;">
            @Html.LabelFor(model => model.Origin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.Origin, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
                @Html.ValidationMessageFor(model => model.Origin, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="left: 50px; margin-top: 10px;">
            @Html.LabelFor(model => model.Destination, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })
                @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            Date
            <br />
            @Html.TextBoxFor(m => m.Date, new { type = "date", style = "date" })
            @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
        </div>

        <div id="returnDate">
            Return Date
            <br />
            @Html.TextBoxFor(m => m.ReturnDate, new { type = "date", style = "date" })
            @Html.ValidationMessageFor(m => m.ReturnDate, "", new { @class = "text-danger" })

        </div>
        <button type="submit" class="btn btn-default" style="margin-top: 10px">Search</button>


    </div>


    <script>
        $(function () {
            $('#returnDate').hide();
            $('input[type=radio][name=tripType]').change(function () {
                if (this.value === 'Two Way') {
                    $('#returnDate').show();
                } else {
                    $('#returnDate').hide();
                }
            });
        });
    </script>
    @*hide the return date when choose one way*@


}

@using (Html.BeginForm("showAllFlights", "Result", FormMethod.Post))
{

    <button type="submit" class="btn btn-default" style="position: absolute; left: 850px; top: 450px; font-family: 'Bradley Hand', sans-serif; font-size: 1.5em; height: 70px">All Flight</button>
    <style>
        .form-control:invalid {
            border-color: #dc3545;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

